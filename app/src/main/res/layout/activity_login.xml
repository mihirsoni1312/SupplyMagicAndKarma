<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:context=".activities.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp" />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:outlineSpotShadowColor="@color/shadow"
                android:padding="@dimen/_8sdp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_10sdp">

                <EditText
                    android:id="@+id/edt_enterCellPhone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:drawableLeft="@drawable/icn_call_3x"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    android:hint="Cell Phone"
                    android:inputType="number"
                    android:maxEms="10"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="@dimen/_12ssp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:outlineSpotShadowColor="@color/shadow"
                android:padding="@dimen/_8sdp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_10sdp">

                <EditText
                    android:id="@+id/edt_enterPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:drawableLeft="@drawable/icn_password_3x"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/medium"
                    android:hint="******"

                    android:inputType="textPassword"
                    android:maxEms="10"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="@dimen/_12ssp" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txt_forgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:text="Forgot password?"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10ssp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="SIGN IN"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"
                app:cornerRadius="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_termsStatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:text="by signing, you agree to our "
                    android:textSize="@dimen/_8ssp" />

                <TextView
                    android:id="@+id/txt_termsAndCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/black"
                    android:text="@string/terms_and_condition"
                    android:textStyle=""
                    android:textSize="@dimen/_8ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_goToRegisterPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSignUpGo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="SIGN UP "
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp" />
                <FrameLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_8sdp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@drawable/whitebg"
                        app:cardCornerRadius="@dimen/_360sdp">

                        <ImageView
                            android:id="@+id/img_next"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:src="@drawable/forwordicon" />

                    </com.google.android.material.card.MaterialCardView>

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activities.OTPEnterScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="10">


            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="2"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/title_otp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:fontFamily="@font/bold"
                android:text="Verify Number"
                android:textColor="@color/toolbarTitle"
                android:textSize="@dimen/_16ssp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/myprofileunderline" />


        <ImageView
            android:id="@+id/img_verifyNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp" />


        <TextView
            android:id="@+id/textforMobilenumbr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="Enter 4 digit OTP number sent \nto +1 568 235698"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
           android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/firstCard"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeWidth="@dimen/_2sdp"
                app:cardElevation="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_firstOTP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:maxLines="1" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/secondOTP"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeWidth="@dimen/_2sdp"
                app:cardElevation="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_secondOTP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:maxLines="1" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/thirdOTP"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeWidth="@dimen/_2sdp"
                app:cardElevation="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_thied_otp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:maxLines="1" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/forthOTP"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeWidth="@dimen/_2sdp"
                app:cardElevation="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_forth_otp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"

                    android:maxLines="1" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit_otp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="VERIFY"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp"
            app:cornerRadius="@dimen/_8sdp" />


    </LinearLayout>

</RelativeLayout>
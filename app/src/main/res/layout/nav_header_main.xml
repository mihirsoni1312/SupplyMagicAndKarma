<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:background="@color/navigationColor"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_ll_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_backClick"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/back"
                    android:tint="@android:color/white" />


                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="@dimen/_50sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_height="@dimen/_50sdp">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profilepics" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/header_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_85sdp"
            android:fontFamily="@font/black"
            android:text="Alpesh Trivedi"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp" />
    </LinearLayout>


</RelativeLayout>

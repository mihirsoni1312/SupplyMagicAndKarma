<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_circle"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/withoutselect" />

        <TextView
            android:id="@+id/txt_address_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="6"
            android:ellipsize="end"
            android:fontFamily="@font/semibold"
            android:maxLines="1"
            android:text="504 specture avenue .."
            android:textSize="@dimen/_10ssp" />

        <LinearLayout
            android:id="@+id/ll_editDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/edt_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:text="EDIT"
                android:textColor="@color/editColor"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/edt_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:fontFamily="@font/semibold"
                android:text="DELETE"
                android:textColor="@color/deleteColor"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_onlyEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_weight="3"
            android:fontFamily="@font/semibold"
            android:gravity="end"
            android:text="EDIT"
            android:textColor="@color/editColor"
            android:textSize="@dimen/_8ssp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@color/myprofileunderline" />

</LinearLayout>